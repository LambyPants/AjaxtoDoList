<% include partials/header %>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			
			<h1>To-do List <i class="fa fa-thumbs-up" aria-hidden="true"></i> </h1>
		<form action="/todos" method="POST" id="newToDoForm">
			<div class="form-group">
				<input type="text" name="todo[text]" class="form-control selected" placeholder="Today, I Will..." id="new-item">
			</div>
			
		</form>
		
			
			<ul id="to-do-list" class="list-group">
			<% todos.forEach(function(todo){ %>
				<li class="list-group-item">
			<form action="/todos/<%=todo._id%>" method="POST" class="edit-item-form">
			<div class="form-group">
				<label for="<%=todo._id%>">Item Text</label>
				<input type="text" value="<%= todo.text %>" name="todo[text]" class="form-control" id="<%=todo._id%>">
			</div>
			<button class="btn btn-primary">Update Item</button>
		</form>
					<span class="lead">
						<%= todo.text %>
					</span>
					<div class="pull-right">
						<button class="btn btn-sm btn-warning edit-button"><span><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span></button>
						<form class="delete-item-form" style="display: inline" method="POST" action="/todos/<%=todo._id%>">
							<button type="submit" class="btn btn-sm btn-danger" ><span><i class="fa fa-trash" aria-hidden="true"></i></span></button>
						</form>
					</div>
					<div class="clearfix"></div>
				</li>
			<% }); %>
			</ul>
	
		</div>
	</div>

<% include partials/footer %>


